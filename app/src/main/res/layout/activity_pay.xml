<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PayActivity"
    android:paddingHorizontal="18dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/arrowBackSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/left_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            android:textColor="@color/btn_yellow"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!--        Dịa chi nhan hang-->
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />
        <LinearLayout
            android:id="@+id/linear1"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="10dp">
            <ImageView
                android:padding="12dp"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="2"
                android:src="@drawable/baseline_location_on_24"
                android:id="@+id/imgLocation"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDiachiinhanhang"
                    android:text="Địa chỉ nhận hàng"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="2dp"/>

                <EditText
                    android:id="@+id/edAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập địa chỉ"
                    android:textSize="15sp" />
                <EditText
                    android:id="@+id/edPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập số điện thoại"
                    android:inputType="phone"
                    android:textSize="15sp"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/linear1" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvPay"
            app:layout_constraintTop_toBottomOf="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="8dp">
        </androidx.recyclerview.widget.RecyclerView>

        <!--        Voucher san pham-->
        <View
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/rcvPay" />

        <LinearLayout
            android:id="@+id/linear3"
            app:layout_constraintTop_toBottomOf="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="8dp">

            <ImageView
                android:padding="12dp"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:src="@drawable/voucher"
                android:id="@+id/imgVoucher"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTenVoucher"
                    android:text="Voucher ưu đãi          "
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="2dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtTenVoucher"
                    android:hint="Chọn hoặc nhập mã"
                    android:background="@null"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:padding="2dp"/>
            </LinearLayout>
        </LinearLayout>
        <!--        Phuong thuc thanh toan-->
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/linear3" />
        <LinearLayout
            android:id="@+id/linear4"
            app:layout_constraintTop_toBottomOf="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="8dp">

            <ImageView
                android:padding="12dp"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:src="@drawable/twotone_monetization_on_24"
                android:id="@+id/imgCoin"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTenLoaiSanPham"
                    android:text="Phương thức thanh toán"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/linear4" />
        <LinearLayout
            android:id="@+id/linear5"
            app:layout_constraintTop_toBottomOf="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:weightSum="10"
            android:padding="8dp">

            <ImageView
                android:padding="12dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/outline_article_24"
                android:id="@+id/imgChiTiet"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/chiTietThanhToan"
                    android:text="Chi tiết thanh toán"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tongTienHang"
                        android:text="Tổng tiền hàng                              "
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:padding="2dp"/>
                    <EditText
                        android:id="@+id/tvTotalPriceProduct"
                        android:text="485.000đ"
                        android:background="@null"
                        android:textSize="15sp"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tongPhiVanChuuyen"
                        android:text="Tổng phí vận chuyển                    "
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:padding="2dp"/>
                    <EditText
                        android:id="@+id/edtPhiVanChuyen"
                        android:text="30.000đ"
                        android:background="@null"
                        android:textSize="15sp"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tongMienPhiVanChuuyen"
                        android:text="Miễn phí vận chuyển                    "
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:padding="2dp"/>
                    <EditText
                        android:id="@+id/edtMienPhiVanChuyen"
                        android:text="-30.000đ"
                        android:background="@null"
                        android:textSize="15sp"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tongThanhToan"
                        android:text="Tổng thanh toán                            "
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:padding="2dp"/>
                    <TextView
                        android:id="@+id/tvTotalPrice"
                        android:text="485.000đ"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/red"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btnOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bg_btn_yellow"
            android:text="Đặt hàng"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
