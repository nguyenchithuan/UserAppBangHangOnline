<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/sac1"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="0.1"
            android:background="@drawable/custom_bg_shopping_cart"
            android:padding="8dp"
            android:src="@drawable/icon_cart"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="302dp"
            tools:layout_editor_absoluteY="31dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="0.1"
            android:background="@drawable/custom_bg_shopping_cart"
            android:padding="8dp"
            android:src="@drawable/icon_chat_yellow"
            tools:layout_editor_absoluteX="355dp"
            tools:layout_editor_absoluteY="31dp"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bộ sản phẩm sạc nhanh Bagi PD20W Type-C"
        android:textSize="18dp"
        android:gravity="center"
        android:textStyle="bold"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        >

        <RatingBar
            android:id="@+id/simpleRatingBar"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
            android:layout_width="wrap_content"
            android:progressTint="#FFC300"
            android:layout_height= "wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:rating="5" />
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="50dp"
            android:layout_height="19dp"
            android:text="(11)   I"/>
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_width="90dp"
            android:layout_height="19dp"
            android:text="Đã bán 22"/>
        <ImageView
            android:layout_width="27dp"
            android:layout_height="25dp"
            android:src="@drawable/vecterheart"/>




    </LinearLayout>
    <TextView
        android:layout_width="147dp"
        android:layout_height="52dp"
        android:text="485.000 đ"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:textSize="28dp"
        android:layout_marginLeft="32dp"/>
    <TextView
        android:layout_width="93dp"
        android:layout_height="16dp"
        android:text="500.000 đ"
        android:layout_marginLeft="32dp"/>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView

            android:layout_width="130dp"
            android:layout_height="16dp"
            android:text="Miễn phí vận chuyển"
            android:textSize="14dp"
            android:textStyle="italic"/>
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_boder_gray"
            >

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="-"
                android:textColor="@color/black"

                android:gravity="center"
                android:background="@drawable/bg_custom_number"
                android:focusable="false"
                />
            <TextView
                android:id="@+id/tv_soluong_sv"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="1"
                android:textSize="14sp"
                android:textColor="#FF5722"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="+"
                android:gravity="center"
                android:background="@drawable/bg_custom_number"
                />

        </LinearLayout>
        

        
        
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F6F6F6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Mã Giảm Giá"
            android:textSize="16dp"
            android:textColor="@color/black"/>
        <TextView
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:background="@drawable/giamgia"
            android:text="Giảm 35k"/>
        <TextView
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:background="@drawable/giamgia"
            android:text="Miễn phí vận"/>





        
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F6F6F6"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <TextView

            android:layout_marginLeft="20dp"
            android:layout_width="170dp"
            android:layout_height="21dp"
            android:text="Nhập địa chỉ giao hàng "
            android:textSize="16dp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_arrow_forward_ios_24"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Bạn hãy "/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text=" nhập địa chỉ "
            android:textColor="#FFC300"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" giao hàng để được dự báo"/>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="thời gian và chi phí giao hàng chính xác nhất "/>
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F6F6F6"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:text="Sản phẩm tương tự"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:layout_marginLeft="50dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Xem tất cả"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/btn_yellow"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/backright"/>
        
            
    </LinearLayout>
    <LinearLayout
        android:gravity="center"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:textColor="#FFC300"
            android:backgroundTint="#F6F6F6"
            android:layout_marginRight="10dp"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:text="Thêm vào giỏ hàng"/>
        <Button
            android:backgroundTint="#FFC300"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:text="Mua Ngay"/>
    </LinearLayout>
    

    
        
            
    
        
        



</LinearLayout>